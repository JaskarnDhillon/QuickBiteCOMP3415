    <script>
        function toggleFaq(button) {
            const answerDiv = button.nextElementSibling;
            answerDiv.classList.toggle("hidden");
            button.querySelector("span").textContent = answerDiv.classList.contains("hidden") ? "+" : "-";
        }
    </script>

