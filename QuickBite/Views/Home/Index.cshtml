    <div class="w-full bg-[#FFF6E5] py-16">
    <div class="container mx-auto px-4">
        <h2 class="text-center font-bold text-4xl mb-10">Now Serving</h2>

        <div class="flex flex-wrap justify-center gap-4">
            @foreach (var province in provinces)
            {
                <button class="province-button rounded-full px-12 py-3 duration-300 transition-colors bg-[#FFE6DE] text-[#4A4A4A]"
                        onclick="selectProvince('@province')">
                    @province
                </button>
            }
        </div>

        <div id="cities-container" class="mt-8 grid grid-cols-10 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4 text-center hidden">
            @foreach (var province in cities.Keys)
            {
                <div data-province="@province" class="city-list hidden">
                    @foreach (var city in cities[province])
                    {
                            <div class="p-2 rounded-lg bg-[#FFF6E5] shadow-sm">
                            @city
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<script>
    function selectProvince(province) {
        document.querySelectorAll('.province-button').forEach(button => {
            button.classList.remove('bg-[#FE7048]', 'text-white');
            button.classList.add('bg-[#FFE6DE]', 'text-[#4A4A4A]');
        });

        const selectedButton = Array.from(document.querySelectorAll('.province-button')).find(button => button.textContent.trim() === province);
        if (selectedButton) {
            selectedButton.classList.add('bg-[#FE7048]', 'text-white');
            selectedButton.classList.remove('bg-[#FFE6DE]', 'text-[#4A4A4A]');
        }

        document.querySelectorAll('.city-list').forEach(list => list.classList.add('hidden'));
        const selectedCityList = document.querySelector(`.city-list[data-province="${province}"]`);
        if (selectedCityList) {
            selectedCityList.classList.remove('hidden');
            document.getElementById('cities-container').classList.remove('hidden');
        }
    }
</script>

