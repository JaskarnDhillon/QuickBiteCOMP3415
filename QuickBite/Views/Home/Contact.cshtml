@{
    ViewData["Title"] = "Contact Us";
    Layout = "_Layout";
}

<div class="relative w-full bg-[#7CB69D] flex flex-col items-center justify-center pt-32 pb-12">
    <h1 class="text-4xl text-white text-[80px] font-bold text-center mb-10 mt-0">Contact QuickBite</h1>
    <p class="text-lg text-white font-medium text-center mb-8" style="margin-top: 10px;">Have any questions or need assistance? Reach out to us!</p>
</div>

<div class="w-full bg-[#FFF6E5] py-16 px-8">
    <div class="container mx-auto text-center">
        <h2 class="text-5xl font-bold text-black mb-12">Get In Touch</h2>

        <div class="flex justify-center gap-20 mb-8">
            <div class="flex flex-col items-center p-4 w-[300px]">
                <h3 class="text-xl font-bold text-black mb-2">Email</h3>
                <p class="text-sm text-gray-600">support@quick-bite.ca</p>
            </div>

            <div class="flex flex-col items-center p-4 w-[300px]">
                <h3 class="text-xl font-bold text-black mb-2">Phone</h3>
                <p class="text-sm text-gray-600">(123) 456-7890</p>
            </div>
        </div>

        <div class="text-center mt-12 max-w-3xl mx-auto">
            <p class="text-lg text-gray-600 leading-relaxed">
                Whether you have a question about your order, need help navigating the site, or just want to give feedback, we’re here for you. Our customer support team is always ready to assist you. Please reach out to us through any of the methods below, and we’ll get back to you as soon as possible!
            </p>
        </div>
    </div>
</div>

<div class="w-full bg-[#FFEDCD] py-16 px-8">
    <div class="container mx-auto text-center">
        <h2 class="text-5xl font-bold text-black mb-12">Follow Us</h2>

        <div class="flex justify-center gap-10 mb-10">
            <a href="https://www.instagram.com/quickbite" target="_blank" class="text-gray-600 text-3xl hover:text-black">
                <i class="fab fa-instagram"></i>
            </a>
            <a href="http://twitter.com/quickbite" target="_blank" class="text-gray-600 text-3xl hover:text-black">
                <i class="fab fa-twitter"></i>
            </a>
            <a href="https://www.facebook.com/quickbite" target="_blank" class="text-gray-600 text-3xl hover:text-black">
                <i class="fab fa-facebook"></i>
            </a>
            <a href="https://twitter.com/quickbite" target="_blank" class="text-gray-600 text-3xl hover:text-black">
                <i class="fab fa-twitter"></i>
            </a>
        </div>

        <p class="text-lg text-gray-600">
            Stay updated with our latest offers and new features by following us on social media. We'd love to connect with you!
        </p>
    </div>
</div>