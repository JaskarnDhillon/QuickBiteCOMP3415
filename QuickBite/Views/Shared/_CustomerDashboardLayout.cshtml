    <style>
        /* Sidebar styles */

        .dashboard_sidebar.collapsed {
            width: 70px;
        }
        .d_link_word{
            font-size:20px;
        }

        .dashboard_sidebar.collapsed .d_link_word{
            display:none;
        }

        .dashboard_sidebar.collapsed .d_link_main{
            display:none;
        }
            /* Default and active link styles */
        .dashboard_sidebar a {
            color: gray;
            padding:15px 10px;
            border-radius:6px;
        }
        .dashboard_sidebar a.active {
            color: #FE7048;
            background-color: rgba(254,112,72,0.17);
        }

        
    </style>
</head>
