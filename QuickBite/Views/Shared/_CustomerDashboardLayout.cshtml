            <div class="text-[25px]">
                <span class="text-orange font-bold">Home</span>
            </div>
        </a>
    </div>
    <div>
        <a asp-page="/" class="flex items-center">
            <img src="~/icons/qbLogo.svg" alt="quickbite logo" class=""/>
