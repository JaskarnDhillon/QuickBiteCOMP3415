<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuickBite Admin</title>
    <link rel="icon" href="icons/qbLogo.svg" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuickBite.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="bg-gray-50 min-h-screen">
    <header class="fixed w-full top-0 z-50 bg-gray-900 shadow-lg">
        <nav class="container mx-auto px-4 py-3">
            <div class="flex items-center justify-between">
                <!-- Logo Section -->
                <div class="flex items-center">
                    <a href="/" class="flex items-center space-x-2">
                        <img src="~/icons/qbLogo.svg" alt="quickbite logo" class="w-12 h-12" />
                        <div class="hidden sm:flex items-center text-2xl">
                            <h1 class="font-bold text-white">Quick</h1>
                            <span class="text-yellow font-bold">Bite Admin</span>
                        </div>
                    </a>
                </div>

                <!-- Navigation Links -->
                <div class="hidden md:flex items-center space-x-6">
                    <a class="nav-link text-gray-300 hover:text-yellow-400 transition-colors duration-200 font-medium"
                       asp-area="SiteAdmin"
                       asp-controller="Categories"
                       asp-action="Index">
                        <i class="fas fa-th-list mr-2"></i>Categories
                    </a>
                    <a class="nav-link text-gray-300 hover:text-yellow-400 transition-colors duration-200 font-medium"
                       asp-area="SiteAdmin"
                       asp-controller="Restaurants"
                       asp-action="Index">
                        <i class="fas fa-utensils mr-2"></i>Restaurants
                    </a>
                </div>

                <!-- User Menu -->
                <div class="flex items-center space-x-4">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="pt-20 min-h-screen bg-gray-50">
        <div class="container mx-auto px-4 py-8">
            <main class="bg-white rounded-lg shadow-md p-6">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>