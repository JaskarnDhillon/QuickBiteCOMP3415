@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="flex gap-4 items-center justify-end w-full md:w-[200px]">
    @if (SignInManager.IsSignedIn(User))
    {        <div class="text-sm font-semibold text-black duration-300 transition-all hover:text-[#e8e8e8]">
            <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                Hello, @User.Identity?.Name
            </a>
        </div>

        <div>
            <form class="inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="bg-yellow text-black text-sm font-semibold py-2 px-5 rounded-full">
                    Logout
                </button>
            </form>
        </div>
        <div class="text-sm font-semibold text-black duration-300 transition-all hover:text-[#e8e8e8]">
            <a asp-controller="restaurantregistration" asp-action="Index" class="hover:underline">Register as Restaurant</a>
        </div>
    }
    else
    {
        <div class="text-sm font-semibold text-black duration-300 transition-all hover:text-[#e8e8e8]">
            <a asp-area="Identity" asp-page="/Account/Login">
                Login
            </a>
        </div>

        <div>
            <a class="bg-yellow text-black text-sm font-semibold py-2 px-5 rounded-full" asp-area="Identity" asp-page="/Account/Register">
                Sign Up
            </a>
        </div>
    }
</div>

