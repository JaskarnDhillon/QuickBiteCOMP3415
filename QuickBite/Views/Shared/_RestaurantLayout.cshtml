<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>QuickBite Restaurant</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
</head>
<body class="bg-gray-50 font-sans min-h-screen flex flex-col">
    <header class="fixed w-full top-0 z-50 bg-gray-900 shadow-lg">
        <nav class="container mx-auto">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex items-center justify-between h-20">
                    <!-- Logo -->
                    <a href="/Restaurant" class="flex items-center space-x-3 group">
                        <span class="text-3xl font-extrabold tracking-wide text-white group-hover:text-yellow-400 transition-colors duration-300">
                            Quick<span class="text-yellow-400">Bite</span>
                        </span>
                        <span class="text-1xl  tracking-wide text-white">
                            Restaurant Administration
                        </span>
                    </a>

                    <!-- Desktop Navigation -->
                    <div class="hidden lg:flex items-center space-x-8">
                        <a href="@Url.Action("Index", "Home", new { area = "Restaurant" })"
                           class="text-lg font-medium text-gray-300 hover:text-yellow-400 transition-colors duration-200">
                            <i class="fas fa-home mr-2"></i>Home
                        </a>
                        <a href="@Url.Action("Index", "Menu", new { area = "Restaurant" })"
                           class="text-lg font-medium text-gray-300 hover:text-yellow-400 transition-colors duration-200">
                            <i class="fas fa-utensils mr-2"></i>Menu
                        </a>
                        <a href="@Url.Action("Index", "Orders", new { area = "Restaurant" })"
                           class="text-lg font-medium text-gray-300 hover:text-yellow-400 transition-colors duration-200">
                            <i class="fas fa-shopping-cart mr-2"></i>Orders
                        </a>
                        <a href="@Url.Action("Index", "RestaurantSettings", new { area = "Restaurant" })"
                           class="text-lg font-medium text-gray-300 hover:text-yellow-400 transition-colors duration-200">
                            <i class="fas fa-cog mr-2"></i>Settings
                        </a>
                    </div>

                    <!-- User Account & Mobile Menu -->
                    <div class="flex items-center text-white space-x-6">
                        <div class="hidden md:block">
                            <partial name="_LoginPartial" />
                        </div>

                        <!-- Mobile Menu Button -->
                        <button class="lg:hidden inline-flex items-center justify-center p-2 rounded-md text-gray-300 hover:text-yellow-400 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-yellow-400">
                            <i class="fa fa-bars fa-lg"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Mobile Menu -->
            <div class="lg:hidden border-t border-gray-700">
                <div class="px-2 pt-2 pb-3 space-y-1">
                    <a href="@Url.Action("Index", "Home", new { area = "Restaurant" })"
                       class="block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-yellow-400 hover:bg-gray-800 transition-colors duration-200">
                        <i class="fas fa-home mr-2"></i>Home
                    </a>
                    <a href="@Url.Action("Index", "Menu", new { area = "Restaurant" })"
                       class="block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-yellow-400 hover:bg-gray-800 transition-colors duration-200">
                        <i class="fas fa-utensils mr-2"></i>Menu
                    </a>
                    <a href="@Url.Action("Index", "Orders", new { area = "Restaurant" })"
                       class="block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-yellow-400 hover:bg-gray-800 transition-colors duration-200">
                        <i class="fas fa-shopping-cart mr-2"></i>Orders
                    </a>
                    <a href="@Url.Action("Index", "Settings", new { area = "Restaurant" })"
                       class="block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-yellow-400 hover:bg-gray-800 transition-colors duration-200">
                        <i class="fas fa-cog mr-2"></i>Settings
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="pt-20 min-h-screen bg-gray-50">
        <div class="container mx-auto px-4 py-8">
            <main class="bg-white rounded-lg shadow-md p-6">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-900 text-gray-300 mt-12">
        <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
            <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
                <div class="text-center md:text-left">
                    <p class="text-lg font-semibold">&copy; 2024 QuickBite Restaurant</p>
                    <p class="text-sm text-gray-400 mt-1">Delicious food, delivered fast</p>
                </div>
                <div class="flex space-x-6">
                    <a href="@Url.Action("Privacy", "Home", new { area = "Restaurant" })"
                       class="text-gray-400 hover:text-yellow-400 transition-colors duration-200">
                        Privacy Policy
                    </a>
                    <a href="#" class="text-gray-400 hover:text-yellow-400 transition-colors duration-200">
                        Terms of Service
                    </a>
                    <a href="#" class="text-gray-400 hover:text-yellow-400 transition-colors duration-200">
                        Contact Us
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>