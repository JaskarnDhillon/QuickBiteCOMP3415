@model IEnumerable<QuickBite.Models.CartItem>
@using QuickBite.Views.Dashboard
@{
    ViewData["Title"] = "Cart";
    Layout = "_CustomerDashboardLayout";
}

<h1>Cart</h1>

@if (Model.Count() == 0)
{
    <h4 class="text-danger">Click Shop above to Get Started!</h4>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Product)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @{
            decimal total = 0;
            foreach (var item in Model)
            {
                total += item.Price * item.Quantity;
            }
        }
        @foreach (var item in Model)
        {
            // keep running tota'
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                    <div>
                        @if (item.Product.Photo != null)
                        {
                            <img src="~/img/product-uploads/@item.Product.Photo" alt="@item.Product.Name Photo" class="h-16"/>
                        }
                        else
                        {
                            <img src="~/img/shawarma.png.jpg" alt="@item.Product.Name Photo" class="h-16"/>
                        }
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @String.Format("{0:c}", item.Price)
                </td>
                <td>
                    @String.Format("{0:c}", (item.Price * item.Quantity))
                </td>
                <td>
                    <a asp-action="RemoveFromCart" asp-route-id="@item.CartItemId">Remove</a>
                </td>
            </tr>
        }
        <tr>
            <td></td>
            <td></td>
            <td>
                <a class="btn btn-primary" asp-action="Index">
                    Continue Shopping
                </a>
            </td>
            <td><strong>@String.Format("{0:c}", total)</strong></td>
            <td>
                <a class="btn btn-primary" asp-action="Checkout">
                    Checkout
                </a>
            </td>
        </tr>
        </tbody>
    </table>
}