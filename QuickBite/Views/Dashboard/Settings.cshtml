@using QuickBite.Controllers
@{
ViewData["Title"] = "Dashboard";
Layout = "_CustomerDashboardLayout";
}

<div class="mx-auto p-6 shadow-lg rounded-lg pt-12 pb-12" style="width:80vw; height: 100vh;">
    <div class="mb-6">
        <h1 class="text-3xl font-semibold text-gray-800">Settings</h1>
    </div>
    <div>
        <hr class="pb-12"/>
    </div>
    <div>
        <form method="post" action="/Dashboard/Settings" class="space-y-6">
            <div>
                <label for="name" class="block text-gray-700">First Name</label>
                <input type="text" id="name" name="name" value="" class="w-full p-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500">
            </div>
            <div>
                <label for="surname" class="block text-gray-700">Last Name</label>
                <input type="text" id="surname" name="surname" value="" class="w-full p-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500">
            </div>
            <div>
                <label for="email" class="block text-gray-700">Email</label>
                <input type="email" id="email" name="email" value="@User.Identity.Name" readonly class="w-full p-3 border border-gray-300 rounded-md shadow-sm bg-gray-100 cursor-not-allowed">
            </div>
            <div>
                <label for="phone" class="block text-gray-700">Phone</label>
                <input type="text" id="phone" name="phone" value="" class="w-full p-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500">
            </div>
        </form>
    </div>
</div>