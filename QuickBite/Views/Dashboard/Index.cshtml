@model QuickBite.Controllers.DashboardController.DashboardIndexViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_CustomerDashboardLayout";

}

<div class='relative w-full h-full p-4'>
    @if (TempData["Error"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
            <p>@TempData["Error"]</p>
        </div>
    }

    @if (TempData["CustomerAddress"] != null)
    {
        <div class="mb-4">
            <h2 class="text-xl font-bold">Showing results for:</h2>
            <p>@TempData["CustomerAddress"]</p>
        </div>
    }

    @if (Model != null && Model.Restaurants!=null && Model.Restaurants.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            @foreach (var restaurant in Model.Restaurants)
            {
                <a asp-action="RestaurantMenu" asp-route-id="@restaurant.RestaurantId">

                            <div class="border rounded-lg p-4 shadow-sm">
                                <h2 class="text-xl font-bold">@restaurant.Name</h2>
                                <p class="text-gray-600">@restaurant.Description</p>
                                <div class="mt-2">
                                    <span class="text-sm text-gray-500">Delivery radius: @restaurant.DeliveryRadius km</span>
                                </div>
                            </div>
                </a>
            }
        </div>
    }
    else
    {
        <div class="text-center py-8">
            <h2 class="text-xl font-bold">No restaurants found</h2>
            <p class="text-gray-600">Try searching a different address or expanding your search area.</p>
        </div>
    }
</div>