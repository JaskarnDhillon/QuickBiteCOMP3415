                        <img src="~/icons/addCart.png" class="w-6 h-6" alt="add to cart icon" />
                    </div>
                </div>
            </div>
            <div class="flex flex-col justify-center items-center w-60">
                <div>
                    <img src="~/img/sushi.png" class="w-full rounded-10" />
                </div>
                <div class="flex justify-between w-full gap-2 mt-4">
                    <div class="flex flex-col gap-2">
                        <h2 class="text-gray-700 font-semibold text-lg">Sushi</h2>
