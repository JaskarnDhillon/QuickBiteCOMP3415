@model QuickBite.Models.Order

@{
    ViewData["Title"] = "Checkout";
    Layout = "_CustomerDashboardLayout";
}

<div class="mx-auto p-6 rounded-lg pt-12 pb-12" style="width:80vw; height: 100vh;">
    <div class="mb-6">
        <h1 class="text-3xl font-semibold text-gray-800">Checkout</h1>
        <h1 class="text-3xl font-semibold text-gray-800">@ViewBag.CustomerId</h1>
    </div>
    <div>
        <hr class="pb-12" />
    </div>
    <div>
        <form method="post" asp-action="Checkout" class="space-y-6">
            <div>
                <label asp-for="FirstName" class="block text-gray-700">First Name</label>
                <input asp-for="FirstName" class="w-full p-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500" />
                <span asp-validation-for="FirstName" class="text-sm text-red-500"></span>
            </div>
            <div>
                <label asp-for="LastName" class="block text-gray-700">Last Name</label>
                <input asp-for="LastName" class="w-full p-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500" />
                <span asp-validation-for="LastName" class="text-sm text-red-500"></span>
            </div>
            <div>
                <label asp-for="Address" class="block text-gray-700">Address</label>
                <input asp-for="Address" class="w-full p-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500" />
                <span asp-validation-for="Address" class="text-sm text-red-500"></span>
            </div>
            <div>
                <label asp-for="City" class="block text-gray-700">City</label>
                <input asp-for="City" class="w-full p-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500" />
                <span asp-validation-for="City" class="text-sm text-red-500"></span>
            </div>
            <div>
                <label asp-for="Province" class="block text-gray-700">Province</label>
                <input asp-for="Province" maxlength="2" class="w-full p-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500" />
                <span asp-validation-for="Province" class="text-sm text-red-500"></span>
            </div>
            <div>
                <label asp-for="PostalCode" class="block text-gray-700">Postal Code</label>
                <input asp-for="PostalCode" class="w-full p-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500" />
                <span asp-validation-for="PostalCode" class="text-sm text-red-500"></span>
            </div>
            <div>
                <label asp-for="Phone" class="block text-gray-700">Phone</label>
                <input asp-for="Phone" class="w-full p-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500" />
                <span asp-validation-for="Phone" class="text-sm text-red-500"></span>
            </div>
            <div>
                <label asp-for="OrderNotes" class="block text-gray-700">Order Notes</label>
                <textarea asp-for="OrderNotes" class="w-full p-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500" ></textarea>
                <span asp-validation-for="OrderNotes" class="text-sm text-red-500"></span>
            </div>
            
            <div class="mt-6">
                <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none">Submit</button>
            </div>
        </form>
    </div>
</div>




