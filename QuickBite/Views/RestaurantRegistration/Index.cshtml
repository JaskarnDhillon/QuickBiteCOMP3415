@model QuickBite.Models.Restaurant

@{
ViewData["Title"] = "Restaurant Registration";
Layout = "_Layout";
}

<style>
    .register-form {
        margin: 100px auto;
        max-width: 600px;
        padding: 25px;
        border-radius: 10px;
        background-color: #f9f9f9;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>

<section class="p-4" style="background-color: #76c69d;">
    <div class="register-form" style="background-color: #ffbe4a;">
        <h2 class="text-2xl font-bold mb-6 text-center">Register a New Restaurant</h2>
        <form asp-action="Register" asp-controller="RestaurantRegistration" enctype="multipart/form-data" method="post">
            <div class="mb-4">
                <label asp-for="Name" class="block text-gray-700 font-medium">Name</label>
                <input asp-for="Name" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300" required />
                <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Description" class="block text-gray-700 font-medium">Description</label>
                <textarea asp-for="Description" rows="4" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300"></textarea>
                <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 font-medium">Photo</label>
                <input asp-for="Photo" type="file" name="photo" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300" />
                <span asp-validation-for="Photo" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 font-medium">Street Name</label>
                <input type="text" name="StreetName" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300" required />
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 font-medium">Street Number</label>
                <input type="text" name="StreetNumber" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300" required />
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 font-medium">Postal Code</label>
                <input type="text" name="PostalCode" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300" required />
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 font-medium">Postal Town</label>
                <input type="text" name="PostalTown" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300" required />
            </div>


            <div class="mb-4">
                <label asp-for="DeliveryRadius" class="block text-gray-700 font-medium">Delivery Radius (in km)</label>
                <input asp-for="DeliveryRadius" type="number" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300" required />
                <span asp-validation-for="DeliveryRadius" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="OpeningHour" class="block text-gray-700 font-medium">Opening Hour</label>
                <input asp-for="OpeningHour" type="time" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300" required />
                <span asp-validation-for="OpeningHour" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="CloseingHour" class="block text-gray-700 font-medium">Closing Hour</label>
                <input asp-for="CloseingHour" type="time" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300" required />
                <span asp-validation-for="CloseingHour" class="text-red-500 text-sm"></span>
            </div>

            <button type="submit" class="w-full bg-orange text-white font-bold py-2 px-4 rounded-md focus:outline-none focus:ring mt-4">
                Submit
            </button>
        </form>
    </div>
</section>
