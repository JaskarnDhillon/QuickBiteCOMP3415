@model QuickBite.Models.Restaurant

@{
    ViewData["Title"] = "Edit Restaurant";
}

<h1 class="text-2xl font-bold mb-6">Edit Restaurant</h1>

<div class="max-w-2xl mx-auto">
    <form asp-action="Edit" method="post" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
        <input type="hidden" asp-for="RestaurantId" />

        <!-- Name -->
        <div>
            <label asp-for="Name" class="block text-sm font-medium text-gray-700">Name</label>
            <input asp-for="Name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
        </div>

        <!-- Description -->
        <div>
            <label asp-for="Description" class="block text-sm font-medium text-gray-700">Description</label>
            <textarea asp-for="Description" rows="3" class="mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500"></textarea>
            <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
        </div>

        <!-- Photo -->
        <div>
            <label asp-for="Photo" class="block text-sm font-medium text-gray-700">Photo URL</label>
            <input asp-for="Photo" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="Photo" class="text-red-500 text-sm"></span>
        </div>

        <!-- Address -->
        <div>
            <label asp-for="Address" class="block text-sm font-medium text-gray-700">Address</label>
            <input asp-for="Address" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
        </div>

        <!-- Latitude -->
        <div>
            <label asp-for="Latitude" class="block text-sm font-medium text-gray-700">Latitude</label>
            <input asp-for="Latitude" type="number" step="any" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="Latitude" class="text-red-500 text-sm"></span>
        </div>

        <!-- Longitude -->
        <div>
            <label asp-for="Longitude" class="block text-sm font-medium text-gray-700">Longitude</label>
            <input asp-for="Longitude" type="number" step="any" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="Longitude" class="text-red-500 text-sm"></span>
        </div>

        <!-- Delivery Radius -->
        <div>
            <label asp-for="DeliveryRadius" class="block text-sm font-medium text-gray-700">Delivery Radius (km)</label>
            <input asp-for="DeliveryRadius" type="number" min="0" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="DeliveryRadius" class="text-red-500 text-sm"></span>
        </div>

        <!-- Opening Hour -->
        <div>
            <label asp-for="OpeningHour" class="block text-sm font-medium text-gray-700">Opening Hour</label>
            <input asp-for="OpeningHour" type="time" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="OpeningHour" class="text-red-500 text-sm"></span>
        </div>

        <!-- Closing Hour -->
        <div>
            <label asp-for="CloseingHour" class="block text-sm font-medium text-gray-700">Closing Hour</label>
            <input asp-for="CloseingHour" type="time" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="CloseingHour" class="text-red-500 text-sm"></span>
        </div>

        <!-- Is Accepted -->
        <div class="flex items-center">
            <input asp-for="isAccepted" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" />
            <label asp-for="isAccepted" class="ml-2 block text-sm text-gray-700">Is Accepted</label>
        </div>

        <!-- Restaurant Owner -->
        <div>
            <label asp-for="RestaurantOwenrId" class="block text-sm font-medium text-gray-700">Restaurant Owner</label>
            <select asp-for="RestaurantOwenrId" asp-items="@(new SelectList(ViewBag.RestaurantOwners, "Value", "Text", Model.RestaurantOwenrId))" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                <option value="">Select Owner</option>
            </select>
            <span asp-validation-for="RestaurantOwenrId" class="text-red-500 text-sm"></span>
        </div>

        <!-- Submit Button -->
        <div class="flex items-center justify-between">
            <button type="submit" class="inline-flex items-center px-4 py-2 bg-indigo-600 border border-transparent rounded-md font-semibold text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Save
            </button>
            <a asp-action="Index" class="text-sm text-indigo-600 hover:text-indigo-900">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
