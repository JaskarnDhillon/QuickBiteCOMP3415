@model QuickBite.Models.Restaurant

@{
    ViewData["Title"] = "Create";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Create Restaurant</h1>

    <div class="bg-white shadow-md rounded-lg p-6">
        <h4 class="text-lg font-semibold text-gray-600 mb-4">Restaurant Details</h4>
        <hr class="mb-6" />

        <form asp-action="Create" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

            <div>
                <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Name" class="form-input w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
                <span asp-validation-for="Name" class="text-red-500 text-sm mt-1"></span>
            </div>

            <div>
                <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Description" class="form-input w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
                <span asp-validation-for="Description" class="text-red-500 text-sm mt-1"></span>
            </div>

            <div>
                <label asp-for="Photo" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Photo" class="form-input w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
                <span asp-validation-for="Photo" class="text-red-500 text-sm mt-1"></span>
            </div>

            <div class="flex justify-end space-x-4">
                <input type="submit" value="Create" class="px-4 py-2 bg-blue-500 text-white rounded-md shadow hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" />
                <a asp-action="Index" class="px-4 py-2 bg-gray-300 text-gray-800 rounded-md shadow hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2">
                    Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
