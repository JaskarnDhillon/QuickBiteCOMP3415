@model QuickBite.Models.Category

@{
    ViewData["Title"] = "Details";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Category Details</h1>

    <div class="bg-white shadow-md rounded-lg p-6">
        <h4 class="text-lg font-semibold text-gray-600 mb-4">Category</h4>
        <hr class="mb-6" />
        <dl class="grid grid-cols-1 md:grid-cols-4 gap-y-4">
            <dt class="font-medium text-gray-700 col-span-1">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="text-gray-900 col-span-3">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
    </div>

    <div class="flex items-center space-x-4 mt-6">
        <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="px-4 py-2 bg-blue-500 text-white rounded-md shadow hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
            Edit
        </a>
        <a asp-action="Index" class="px-4 py-2 bg-gray-300 text-gray-800 rounded-md shadow hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2">
            Back to List
        </a>
    </div>
</div>
