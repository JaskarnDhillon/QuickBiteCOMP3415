@model IEnumerable<QuickBite.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Categories</h1>

    <div class="mb-4">
        <a asp-action="Create" class="inline-block px-4 py-2 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600">
            Create New
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full border border-gray-200 rounded-lg shadow-md">
            <thead class="bg-gray-100">
                <tr>
                    <th class="px-4 py-2 text-left text-sm font-medium text-gray-600 border-b">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th class="px-4 py-2 text-right text-sm font-medium text-gray-600 border-b">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-2 text-gray-700 border-b">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="px-4 py-2 text-right border-b">
                            <a asp-action="Edit" asp-route-id="@item.CategoryId" class="text-blue-500 hover:underline">
                                Edit
                            </a>
                            <span class="text-gray-400 mx-2">|</span>
                            <a asp-action="Details" asp-route-id="@item.CategoryId" class="text-green-500 hover:underline">
                                Details
                            </a>
                            <span class="text-gray-400 mx-2">|</span>
                            <a asp-action="Delete" asp-route-id="@item.CategoryId" class="text-red-500 hover:underline">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
