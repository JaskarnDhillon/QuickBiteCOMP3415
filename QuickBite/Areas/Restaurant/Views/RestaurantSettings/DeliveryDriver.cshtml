@model QuickBite.Models.Restaurant

<div class="container mx-auto mt-10 max-w-md">
    <h2 class="text-2xl font-bold mb-6 text-gray-800">Delivery Driver Email</h2>

    @if (ViewBag.DriverEmail!=null)
    {
        <!-- Display the existing email -->
        <div class="bg-gray-100 p-4 rounded-md border border-gray-300">
            <label class="block text-sm font-medium text-gray-700 mb-2">Delivery Driver Email</label>
            <div class="text-gray-800 font-semibold">@ViewBag.DriverEmail</div>
            <p class="text-sm text-gray-500 mt-1">This email is already assigned and cannot be changed.</p>
        </div>
    }
    else
    {
        <!-- Display the form to input email -->
        <form asp-action="AssignDeliveryDriver" method="post" class="bg-white p-6 rounded-md shadow-md">
            @Html.AntiForgeryToken()

            <div class="mb-4">
                <!-- RestaurantId as a hidden field -->
                <input type="hidden" name="RestaurantId" value="@ViewBag.RestaurantId" />

                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Enter Delivery Driver Email</label>
                <input type="email" id="email" name="email"
                       class="block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-yellow-400 focus:border-yellow-400"
                       placeholder="driver@example.com" required />
            </div>

            <button type="submit"
                    class="w-full bg-yellow-400 hover:bg-yellow-500 text-white font-semibold py-2 rounded-md transition duration-300">
                Assign Delivery Driver
            </button>
        </form>
    }
</div>
