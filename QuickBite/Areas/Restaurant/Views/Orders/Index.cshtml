@model List<QuickBite.Models.Order>

<div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Orders</h1>
    <div class="overflow-x-auto">
        <table class="table-auto w-full border-collapse border border-gray-300 shadow-lg rounded-lg">
            <thead>
                <tr class="bg-gray-100">
                    <th class="border border-gray-300 px-4 py-2">Order ID</th>
                    <th class="border border-gray-300 px-4 py-2">Order Date</th>
                    <th class="border border-gray-300 px-4 py-2">Customer Name</th>
                    <th class="border border-gray-300 px-4 py-2">Total</th>
                    <th class="border border-gray-300 px-4 py-2">Status</th>
                    <th class="border border-gray-300 px-4 py-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="border border-gray-300 px-4 py-2">
                            <!-- Display only the last 4 characters of the Order ID -->
                            @order.OrderId.ToString().Substring(order.OrderId.ToString().Length - 4)
                        </td>
                        <td class="border border-gray-300 px-4 py-2">@order.OrderDate.ToString("yyyy-MM-dd")</td>
                        <td class="border border-gray-300 px-4 py-2">@order.FirstName @order.LastName</td>
                        <td class="border border-gray-300 px-4 py-2">@order.OrderTotal.ToString("C")</td>
                        <td class="border border-gray-300 px-4 py-2">
                            <span class="px-2 py-1 rounded">
                                @order.OrderStatus
                            </span>
                        </td>
                        <td class="border px-4 py-2 text-center">
                            <a href="@Url.Action("Details", "Orders", new { id = order.OrderId })" class="text-white bg-blue-500 hover:bg-blue-600 font-semibold py-2 px-4 rounded">
                                View Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
