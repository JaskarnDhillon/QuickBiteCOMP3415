@model QuickBite.Models.Product

@{
    ViewData["Title"] = "Edit Menu Item";
}

<h1 class="text-2xl font-bold text-center mb-6">@ViewData["Title"]</h1>

<div class="max-w-2xl mx-auto bg-white p-6 rounded-lg shadow-md">
    <form asp-action="Edit" enctype="multipart/form-data" class="space-y-4">
        <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>
        <input type="hidden" asp-for="ProductId" />

        <!-- Name Field -->
        <div>
            <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
            <input asp-for="Name" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
        </div>

        <!-- Price Field -->
        <div>
            <label asp-for="Price" class="block text-sm font-medium text-gray-700 mb-1">Price</label>
            <input asp-for="Price" type="number" step="0.01" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="Price" class="text-red-600 text-sm"></span>
        </div>

        <!-- Category Field -->
        <div>
            <label asp-for="CategoryId" class="block text-sm font-medium text-gray-700 mb-1">Category</label>
            <select asp-for="CategoryId" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" asp-items="ViewBag.CategoryId"></select>
            <span asp-validation-for="CategoryId" class="text-red-600 text-sm"></span>
        </div>

        <!-- Description Field -->
        <div>
            <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
            <textarea asp-for="Description" rows="4" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500"></textarea>
            <span asp-validation-for="Description" class="text-red-600 text-sm"></span>
        </div>

        <!-- Photo Upload -->
        <div>
            <label asp-for="Photo" class="block text-sm font-medium text-gray-700 mb-1">Photo</label>
            <input type="file" asp-for="Photo" class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" />
        </div>

        <!-- Display Current Photo -->
        @if (Model.Photo != null)
        {
            <div class="mt-4">
                <img src="~/img/product-uploads/@Model.Photo" alt="Product Photo" class="w-32 h-32 object-cover rounded-md border border-gray-300" />
            </div>
        }
        <input type="hidden" name="CurrentPhoto" value="@Model.Photo" />

        <!-- Save Button -->
        <div class="flex justify-end">
            <input type="submit" value="Save" class="px-4 py-2 bg-indigo-600 text-white rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
        </div>
    </form>

    <!-- Back to List Link -->
    <div class="mt-6">
        <a asp-action="Index" class="text-indigo-600 hover:underline">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
