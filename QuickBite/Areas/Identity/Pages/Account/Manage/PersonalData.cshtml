@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="text-xl font-semibold mb-4">@ViewData["Title"]</h3>

<div class="max-w-lg mx-auto">
    <p class="mb-4">Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
    <p class="mb-6 font-bold text-red-600">Deleting this data will permanently remove your account, and this cannot be recovered.</p>

    <form id="download-data" asp-page="DownloadPersonalData" method="post" class="mb-4">
        <button class="w-full px-4 py-2 bg-indigo-600 text-white font-semibold rounded hover:bg-indigo-700" type="submit">Download</button>
    </form>

    <p>
        <a id="delete" asp-page="DeletePersonalData" class="w-full px-4 py-2 bg-red-600 text-white font-semibold rounded hover:bg-red-700 inline-block text-center mb-3">Delete</a>
    </p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
