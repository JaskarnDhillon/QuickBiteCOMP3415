@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="text-xl font-semibold mb-4">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="max-w-md mx-auto">
    <form id="change-password-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4" role="alert"></div>

        <div class="mb-4">
            <label asp-for="Input.OldPassword" class="block text-gray-700 font-medium mb-1">Old Password</label>
            <input asp-for="Input.OldPassword" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-indigo-600" autocomplete="current-password" aria-required="true" placeholder="Please enter your old password." />
            <span asp-validation-for="Input.OldPassword" class="text-red-500"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Input.NewPassword" class="block text-gray-700 font-medium mb-1">New Password</label>
            <input asp-for="Input.NewPassword" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-indigo-600" autocomplete="new-password" aria-required="true" placeholder="Please enter your new password." />
            <span asp-validation-for="Input.NewPassword" class="text-red-500"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Input.ConfirmPassword" class="block text-gray-700 font-medium mb-1">Confirm Password</label>
            <input asp-for="Input.ConfirmPassword" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-indigo-600" autocomplete="new-password" aria-required="true" placeholder="Please confirm your new password." />
            <span asp-validation-for="Input.ConfirmPassword" class="text-red-500"></span>
        </div>

        <button type="submit" class="w-full px-4 py-2 bg-indigo-600 text-white font-semibold rounded hover:bg-indigo-700 mb-3">Update password</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}